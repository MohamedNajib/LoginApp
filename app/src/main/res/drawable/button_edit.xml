<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="80dp" android:height="34dp">
        <shape android:shape="rectangle">
            <corners android:radius="17dp" />
            <gradient android:type="linear" android:useLevel="false" android:startColor="#ff0065ff" android:endColor="#ff00d6d3" android:angle="135" />
            <item android:name="android:shadowColor">#1400d6d3</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
        </shape>
    </item>
</selector>