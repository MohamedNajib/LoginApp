<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="142dp" android:height="120dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#fffbfbfe" />
            <item android:name="android:shadowColor">#1400d6d3</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">8</item>
        </shape>
    </item>
</selector>